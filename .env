 # ======== Timezone
TZ=Asia/Jakarta

# ======== Postgres
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=ubah_password_db_kamu

# ======== n8n
# Host publik tempat n8n diakses (domain atau IP)
N8N_HOST=localhost
# URL webhook penuh (pakai https kalau di balik reverse proxy)
WEBHOOK_URL=http://localhost:5678
# Port service di dalam & luar container (dipetakan 1:1)
N8N_PORT=5678
# http / https (kalau pakai reverse proxy TLS, tetap set https)
N8N_PROTOCOL=http
# true bila akses via HTTPS dan butuh cookie aman
N8N_SECURE_COOKIE=false

# Kunci enkripsi kredensial n8n (WAJIB diisi; simpan rahasia!)
N8N_ENCRYPTION_KEY=ganti_dengan_kunci_rahasia_min_32_karakter
